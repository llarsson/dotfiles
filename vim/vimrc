" -- Begin Pathogen-related settings
runtime bundle/vim-pathogen/autoload/pathogen.vim
call pathogen#infect()
" -- End Pathogen-related settings

autocmd FileType html,htmldjango,jinjahtml,eruby,mako let b:closetag_html_style=1
autocmd FileType html,xhtml,xml,htmldjango,jinjahtml,eruby,mako source ~/.vim/bundle/closetag/plugin/closetag.vim

" Make middle mouse paste without formatting
map <MouseMiddle> <Esc>"*p"

set nocompatible

filetype plugin indent on

set backspace=indent,eol,start
set autoindent
syntax on
set linebreak
set textwidth=0
set nobackup
set ruler
set showcmd
set showmatch
set ignorecase
set smartcase
set incsearch
set autowrite

set tabstop=4
set softtabstop=4
set shiftwidth=4
set smarttab 
set expandtab 

" Don't suggest the following when looking for files to open
set suffixes=.bak,~,.swp,.o,.info,.aux,.log,.dvi,.bbl,.blg,.brf,.cb,.ind,.idx,.ilg,.inx,.out,.toc,.eps,.ps,.pdf

set term=xterm
if &term =~ "xterm"
  set t_Co=16
  set t_Sf=[3%dm
  set t_Sb=[4%dm
endif

set grepprg=grep\ -nH\ $*
let g:tex_flavor='latex'

" in normal mode: ^N twice toggles line numbers
nmap <C-N><C-N> :set invnumber <CR> 

autocmd BufRead,BufNewFile *.xml,*.wsdl,*.xslt,*.xsd,*.xhtml set ft=xml

" -- Begin simple arrow navigation
imap <buffer> <Up> <C-O>gk
imap <buffer> <Down> <C-O>gj

nmap <buffer> <Up> gk
nmap <buffer> <Down> gj

vmap <buffer> <Up> gk
vmap <buffer> <Down> gj
" -- End simple arrow navigation

imap <C-Backspace> <C-o>db

" solarized theme
set background=dark
colorscheme solarized
